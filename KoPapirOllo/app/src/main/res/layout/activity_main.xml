<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageUserchoice"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/rock" />

            <TextView
                android:id="@+id/textUserchoice"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="A te választásod"
                android:textAlignment="center"
                android:textSize="28dp" />

            <ImageView
                android:id="@+id/imageComputerChoice"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/rock" />

            <TextView
                android:id="@+id/textComputerchoice"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:text="A gép választása"
                android:textAlignment="center"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/textCounters"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Eredmény: Ember: 0, Computer: 0, Döntetlen: 0"
                android:textAlignment="center"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonRock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kő" />

                <Button
                    android:id="@+id/buttonPaper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Papír" />

                <Button
                    android:id="@+id/buttonScissors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Olló" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>